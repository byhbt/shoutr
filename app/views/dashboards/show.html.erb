<h1>Dashboard</h1>

<div class="row">
  <div class="col-sm-12">
    <%= form_for @shout do |form| %>
      <%= form.hidden_field :content_type, value: "TextShout" %>
      <%= form.fields_for :content do |content_form| %>
      <%= content_form.text_field :body, placeholder: "Shout here!", required: true, class: 'form-control' %>
      <%= form.submit "Shout!", class: 'btn btn-primary' %>
      <% end %>
    <% end %>

    <%= form_for @shout do |form| %>
      <%= form.hidden_field :content_type, value: "PhotoShout" %>
      <%= form.fields_for :content do |content_form| %>
        <%= content_form.file_field :image, required: true %>
        <%= content_form.submit "Shout!", class: 'btn btn-primary' %>
      <% end %>
    <% end %>
  </div>
</div>

<%# https://thoughtbot.com/blog/rendering-collections-in-rails %>
<%= render @shouts %>
