<h1>Dashboard</h1>

<div class="row">
  <div class="col-sm-12">
    <%= form_for @shout do |form| %>
      <%= form.text_field :body, placeholder: "Shout here!", require: true, class: 'form-control' %>
      <%= form.submit "Shout!", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>

<%= render @shouts %>
